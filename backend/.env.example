# Server Configuration
API_V1_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
PROJECT_NAME=QR Doorbell App

# Environment
ENVIRONMENT=development  # development, staging, production
